<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Short URL Result</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f5f5f5;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding-top: 50px;
      font-family: Arial, sans-serif;
    }
    .card {
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 500px;
      text-align: center;
      margin-bottom: 20px;
    }
    #shortUrlInput {
      width: 100%;
      text-align: center;
      font-weight: bold;
      margin-bottom: 1rem;
    }
    .toast-container {
      position: fixed;
      top: 20px;
      right: 20px;
    }
  </style>
</head>
<body>
  <div class="card">
    <h2 class="mb-4">Your Shortened URL</h2>

    <input id="shortUrlInput" type="text" class="form-control" value="<%= shortUrl %>" readonly>
    <button class="btn btn-success mb-3" onclick="copyUrl()">Copy to Clipboard</button>

    <% if (typeof clicks !== 'undefined') { %>
      <p><strong>Clicks:</strong> <%= clicks %></p>
    <% } %>

    <% if (typeof expiresAt !== 'undefined' && expiresAt) { %>
      <p><strong>Expires At:</strong> <%= new Date(expiresAt).toLocaleString() %></p>
    <% } %>

    <a href="/" class="btn btn-primary d-block">Shorten another URL</a>
  </div>

  <% if (typeof history !== 'undefined' && history.length > 0) { %>
    <div class="card mt-4 p-3">
      <h4 class="mb-3">Your URL History</h4>
      <ul class="list-group">
        <% history.forEach(item => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <a href="<%= item.shortUrl %>" target="_blank"><%= item.shortUrl %></a>
              <% if(item.expiresAt){ %>
                <span class="text-muted">(Expires: <%= new Date(item.expiresAt).toLocaleDateString() %>)</span>
              <% } %>
            </div>
            <button class="btn btn-sm btn-outline-secondary" onclick="copyHistoryUrl('<%= item.shortUrl %>')">Copy</button>
          </li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <!-- Toast notification -->
  <div class="toast-container">
    <div class="toast align-items-center text-white bg-success border-0" id="copyToast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          Copied to clipboard!
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function copyUrl() {
      const copyText = document.getElementById("shortUrlInput");
      copyText.select();
      copyText.setSelectionRange(0, 99999);
      navigator.clipboard.writeText(copyText.value);
      showToast();
    }

    function copyHistoryUrl(url) {
      navigator.clipboard.writeText(url);
      showToast();
    }

    function showToast() {
      const toastEl = document.getElementById('copyToast');
      const toast = new bootstrap.Toast(toastEl);
      toast.show();
    }

    // Auto-copy main short URL on page load
    window.onload = () => {
      copyUrl();
    }
  </script>
</body>
</html>
